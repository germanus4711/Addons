<GuiXml>
	<Controls>
		<TopLevelControl name="EVTFrame" resizeToFitDescendents="true" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
			<OnMoveStop>
				EVT.OnMoveStop()
			</OnMoveStop>
			<Controls>
				<Texture name="$(parent)Icon">
					<Anchor point="TOPLEFT" />
					<Dimensions x="24" y="24" />
				</Texture>
				<Label name="$(parent)Label" font="ZoFontHeader2" horizontalAlignment="LEFT" verticalAlignment="BOTTOM">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Icon" offsetX="3" offsetY="12"/>
					<Dimensions y="96" />
				</Label>
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>
