<GuiXml>
  <Controls>
    <Control name="VotansAchievementRow" virtual="true" mouseEnabled="true">
      <Dimensions x="300" y="64" />
      <Controls>
        <Texture name="$(parent)Highlight" textureFile="EsoUI/Art/Miscellaneous/listItem_highlight.dds" alpha="0">
          <AnchorFill />
          <TextureCoords left="0" right="1" top="0" bottom=".625" />
        </Texture>

        <Texture name="$(parent)Texture" level="3">
          <Anchor point="TOPLEFT" offsetX="10" offsetY="10" />
          <Dimensions x="40" y="40"/>
          <Controls>
            <Texture name="$(parent)BG" textureFile="EsoUI/Art/Achievements/achievements_iconBG.dds" level="2">
              <AnchorFill />
            </Texture>
            <Texture name="$(parent)Frame" textureFile="EsoUI/Art/ActionBar/abilityFrame64_up.dds" layer="CONTROLS">
              <AnchorFill />
            </Texture>
          </Controls>
        </Texture>

        <Label name="$(parent)Recent" font="ZoFontWindowSubtitle" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER">
          <Dimensions x="84"/>
          <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="0" offsetY="4"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="-4"/>
        </Label>
        <Label name="$(parent)Name" font="ZoFontWinH4" wrapMode="ELLIPSIS" verticalAlignment="TOP" horizontalAlignment="LEFT">
          <Anchor point="TOPLEFT" relativeTo="$(parent)Texture" relativePoint="TOPRIGHT" offsetX="5" offsetY="0"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Recent" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="-26"/>
        </Label>
        <Label name="$(parent)Origin" font="$(BOLD_FONT)|14" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" wrapMode="ELLIPSIS" verticalAlignment="CENTER" horizontalAlignment="LEFT">
          <Anchor point="TOPLEFT" relativeTo="$(parent)Name" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Recent" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
        </Label>
      </Controls>
    </Control>
  </Controls>
</GuiXml>
